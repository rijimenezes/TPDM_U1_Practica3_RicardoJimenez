<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".Main2Activity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unirse al club Mexico"
        android:textSize="30dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:id="@+id/frase1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/frase1"
        android:text="Comparte nuevos conocimientos con la comunidad"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/frase2"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/frase2"
        android:src="@drawable/avatar1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/avatar1"
        />
    <ImageView
        style="@style/imageneslaterales"
        android:layout_toLeftOf="@id/avatar1"
        android:src="@drawable/avatar2"
        android:id="@+id/avatar2"
        />
    <ImageView
        style="@style/imageneslaterales"
        android:layout_toRightOf="@id/avatar1"
        android:src="@drawable/avatar4"
        android:id="@+id/avatar3"
        />
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_toRightOf="@id/avatar2"
        android:layout_toLeftOf="@id/avatar3"
        android:layout_below="@id/avatar1"
        android:src="@drawable/avatar3"
        android:id="@+id/avatar4"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar4"
        android:text="Encontrar club"
        android:background="@drawable/azulredondo"
        android:paddingRight="60dp"
        android:paddingLeft="60dp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/botonazul"
        />
    <Button
        style="@style/botones"
        android:background="@drawable/redondeado"
        android:text="CREAR CLUB"
        android:layout_below="@id/botonazul"
        android:id="@+id/botonleft"
        android:layout_marginLeft="65dp"

        />

    <Button
        style="@style/botones"
        android:text="CODIGO DEL CLUB"
        android:layout_below="@id/botonazul"
        android:layout_toRightOf="@id/botonleft"
        android:id="@+id/botonr"
        android:layout_marginLeft="5dp"
        />
    <ImageView
        style="@style/imagenesbottom"
        android:id="@+id/v1"
        android:src="@drawable/v1"
        />
    <ImageView
        style="@style/imagenesbottom"
        android:layout_toRightOf="@id/v1"
        android:id="@+id/v2"
        android:src="@drawable/v2"
        />
    <ImageView
        style="@style/imagenesbottom"
        android:layout_toRightOf="@id/v2"
        android:src="@drawable/v5"
        android:id="@+id/v3"
        />
    <ImageView
        style="@style/imagenesbottom"
        android:layout_toRightOf="@id/v3"
        android:id="@+id/v4"
        android:src="@drawable/v3"
        />
    <ImageView
        style="@style/imagenesbottom"
        android:src="@drawable/shop"
        android:layout_toRightOf="@id/v4"
        />

</RelativeLayout>